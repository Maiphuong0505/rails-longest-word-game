<div class="container mt-5 d-flex justify-content-center">
  <div class="card border-success mb-3 col-9">
    <div class="card-header">
      New Game
    </div>
    <div class="card-body text-secondary">
      <div id="grid-display">
        <h5>Here is your grid:</h5>
        <div class="d-flex align-items-center justify-content-around bg-success my-3 rounded-2">
          <% @grid.each do |letter| %>
            <p class="text-light my-1"><%= letter %></p>
          <% end %>
        </div>
      </div>

      <form action="/score" method="post" data-turbo="false">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input id="grid" name="grid" type="hidden" value=<%= @grid_join %>>
        <div class="mb-3">
          <label for="word" class="card-title">What is the longest word you can find?</label>
          <div class="input-group mb-3">
            <input type="text" name="word" id="word" placeholder="Type your word here" class="form-control">
            <button type="submit" class="btn btn-outline-secondary">Play</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
