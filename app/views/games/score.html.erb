<div class="container mt-5 d-flex justify-content-center">
  <div class="card border-success mb-3 col-9">
    <div class="card-header">
      Your word is: <%= @word %>
    </div>
    <div class="card-body text-secondary">
      <div id="response">
        <h6><%= @response  %></h6>
      </div>
      <div class="score d-flex justify-content-between align-items-center mt-3 mb-2">
        <p class="mb-0">Your score is: <%= @score %></p>
        <button id="play-again" type="button" class="btn btn-success"><%= link_to "Play again", new_path %></button>
      </div>
    </div>
  </div>
</div>
